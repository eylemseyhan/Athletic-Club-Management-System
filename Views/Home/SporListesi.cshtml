@model IEnumerable<DsiSporKayitSistemi.Models.SporDali>
@{
    ViewBag.Title = "Spor Listesi";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 class="text-center">Spor Dalları Listesi</h2>
<div class="container-md">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <!-- Spor Dalları Listesi Tablosu -->
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Spor Dalı Adı</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var spor in Model)
                                    {
                                        <tr>
                                            <td>@spor.SporID</td>
                                            <td>@spor.SporAdi</td>
                                            <td>
                                                @Html.ActionLink("Düzenle", "SporDaliUpdateForm", new { id = spor.SporID }, new { @class = "btn btn-warning btn-sm" })
                                                @Html.ActionLink("Sil", "SporDaliSil","KontrolPaneli", new { id = spor.SporID }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Bu spor dalını silmek istediğinizden emin misiniz?');" })</td>
                                           
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
