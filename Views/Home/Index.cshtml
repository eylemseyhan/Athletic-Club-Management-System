
@{
    ViewBag.Title = "DSI Spor Kulübü Kayıt Sistemi";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h2 mb-0 text-gray-900">Ana Sayfa</h1>
    </div>

    <!-- küçük kartlar-->
    <div class="row">
        <!-- kayıtlı öğrenci -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Kayıtlı Öğrenci Sayısı
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.kayitliOgrenciSayisi</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- antrenör sayısı -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Antrenör Sayısı
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.AntrenorSayisi</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-running fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- toplam kurs sayısı  -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Toplam Kurs Sayısı
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.toplamKursSayisi</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chalkboard-teacher fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- devam eden kurs Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                               Devam Eden Kurs Sayısı 
                            </div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@ViewBag.DevamEdenKurs</div>
                                </div>
                                
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chalkboard-teacher fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>




    </div>

    <!-- content row -->

    <div class="row">
        <!--  Kurs Katılım Oranları diyagramı -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Kurs Katılım Oranları</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <canvas id="myPieChart"></canvas>
                    </div>
                    <div class="mt-4 text-center small">
                        <span class="mr-2">
                            <i class="fas fa-circle text-primary"></i> Yüzme
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle text-success"></i> Basketbol
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle text-info"></i> Futbol
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Duyuru panosu -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Duyuru Panosu</h6>
                    <div class="dropdown no-arrow">
                     
                    </div>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="row">
                        <!-- Sol Sütun: Resimler -->
                        <div class="col-md-6 d-flex justify-content-center align-items-center">
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                </ol>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="~/Content/assets/img/image1-75.jpeg" alt="First slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="~/Content/assets/img/1.jpg" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="~/Content/assets/img/2.jpg" alt="Third slide">
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                        <!--  Yazılar -->
                        <div class="col-md-6 d-flex flex-column justify-content-center">
                            <h4>DSİ Spor Kulübü Kayıt Sistemi Açıldı!</h4>
                            <p>Büyük bir heyecanla duyuruyoruz ki, DSİ Spor Kulübü olarak artık online kayıt sistemi kullanıyoruz! Spor faaliyetlerimize katılımı daha kolay ve hızlı hale getirmek için yaptığımız bu yenilikle, sporcularımızın ve ailelerinin kayıt süreçlerini dijital ortamda güvenli ve pratik bir şekilde gerçekleştirebileceksiniz.</p>
                            <p> Size en iyi hizmeti sunmak ve spor deneyiminizi daha da geliştirmek için sürekli çalışıyoruz.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>




        <!-- Content Row -->
        <div class="row">

            <!-- Content Column -->
            <div class="col-lg-6 mb-4">

                <!-- Kurs Doluluk Oranları Kartı -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Kurs Kontenjanlar</h6>
                    </div>
                    <div class="card-body">
                        <!-- Futbol -->
                        <h6 class="small font-weight-bold">
                            Futbol <span class="float-right">60%</span>
                        </h6>
                        <div class="progress mb-3">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 60%"
                                 aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <!--  Basketbol -->
                        <h6 class="small font-weight-bold">
                            Basketbol <span class="float-right">50%</span>
                        </h6>
                        <div class="progress mb-3">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 50%"
                                 aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <!--  Voleybol -->
                        <h6 class="small font-weight-bold">
                            Voleybol <span class="float-right">45%</span>
                        </h6>
                        <div class="progress mb-3">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: 45%"
                                 aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <!-- Yüzme -->
                        <h6 class="small font-weight-bold">
                            Yüzme <span class="float-right">70%</span>
                        </h6>
                        <div class="progress mb-3">
                            <div class="progress-bar bg-info" role="progressbar" style="width: 70%"
                                 aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <!--  Tenis -->
                        <h6 class="small font-weight-bold">
                            Tenis <span class="float-right">55%</span>
                        </h6>
                        <div class="progress mb-3">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: 55%"
                                 aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <!--Fitness -->
                        <h6 class="small font-weight-bold">
                            Fitness <span class="float-right">65%</span>
                        </h6>
                        <div class="progress mb-3">
                            <div class="progress-bar bg-dark" role="progressbar" style="width: 65%"
                                 aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <!--  Satranç -->
                        <h6 class="small font-weight-bold">
                            Satranç <span class="float-right">40%</span>
                        </h6>
                        <div class="progress mb-3">
                            <div class="progress-bar bg-secondary" role="progressbar" style="width: 40%"
                                 aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <!--  Jimnastik -->
                        <h6 class="small font-weight-bold">
                            Jimnastik <span class="float-right">50%</span>
                        </h6>
                        <div class="progress mb-3">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 50%"
                                 aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <!--  Pilates -->
                        <h6 class="small font-weight-bold">
                            Pilates <span class="float-right">75%</span>
                        </h6>
                        <div class="progress mb-3">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 75%"
                                 aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <!--  Savunma Sporları -->
                        <h6 class="small font-weight-bold">
                            Savunma Sporları <span class="float-right">85%</span>
                        </h6>
                        <div class="progress">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: 85%"
                                 aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-4">

                @Html.Partial("Calendar")




            </div>
            <div class="row">
                <div class="col-lg-11 mb-4 ml-2">

                    <!-- Approach -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Edirne DSİ Spor Tarihçesi</h6>
                        </div>
                        <div class="card-body">
                            <p>
                                Edirne DSİ Spor, 1963 yılında Devlet Su İşleri Genel Müdürlüğü tarafından Edirne ilinde kurulmuş bir spor kulübüdür. Kulüp, futbolun yanında, basketbol, voleybol, yüzme, tenis, fitness, satranç, jimnastik, pilates, savunma sporları alanlarında da faaliyet göstermektedir.
                            </p>
                            <p>
                                <strong>Tarihçe</strong><br>
                                1963 yılında Devlet Su İşleri Genel Müdürlüğü'nün Edirne Bölge Müdürü Fethi Berbars tarafından Edirne Su Spor adıyla kurulan kulüp, faaliyetine bir süreliğine ara verdikten sonra 21 Temmuz 1980 tarihinde Edirne Bölge Müdürü Ferit Karakurt'un başkanlığında Edirne DSİ Spor adı altında tekrar kuruldu. 1995-1996 sezonunda futbol branşında 3. Lig'e yükselen kulüp, tarihinde ilk kez profesyonel liglerde mücadele etmeye başladı. İlk sezonunda, Babaeskispor'un bir sıra üzerinde yer alıp averaj farkıyla kümede kaldı. Ancak ertesi sezon maddi imkânsızlıklar nedeniyle sezon başında ligden çekilerek amatör kümeye düştü.
                            </p>
                            <p class="mb-0">
                                1996 yılında büyük erkek basketbol takımı ise, Anadolu Kupası'nı kazanarak Türkiye 2. Ligi'ne terfi müsabakalarına katılma hakkını elde etti ancak grup müsabakaları sonucu elendi.
                            </p>
                        </div>
                    </div>

                </div>
            </div>

    </div>
    <!-- /.container-fluid -->

</div>
<!-- End of Main Content -->
